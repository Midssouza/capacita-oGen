package Calculadora;

import java.util.Scanner;

public class calculadora {

	public static void main(String[] args) {
		/*
		 * nomeUsuario senhaUsuario 3 tentativas de erro laço de decisão if e else Menu
		 * - switch case decisão de saida
		 */

		Scanner ler = new Scanner(System.in);

		int num1, num2, senhaDigitada, cont = 0, senhaAtual = 1984;
		int soma, subtracao, multiplicacao, divisao;
		String nome;

		System.out.println(" Digite seu nome ");
		nome = ler.nextLine();

		do {
			System.out.println(" Digite sua senha: ");
			senhaDigitada = ler.nextInt();
			System.out.println(" Senha Correta !!   ");
			if (senhaDigitada == senhaAtual) {
				System.out.println("Digite o primeiro numero; ");
				num1 = ler.nextInt();
				System.out.println("Digite o segundo numero; ");
				num2 = ler.nextInt();

				System.out.printf(" ---------- CALCULADORA DA MI ------- \n ");

				soma = (num1 + num2);
				System.out.printf(" * 1 - soma é %d \n ", soma);

				subtracao = (num1 - num2);
				System.out.printf(" * 2 - subtração é %d \n ", subtracao);

				multiplicacao = (num1 * num2);
				System.out.printf(" * 3 - multiplicação é %d \n ", multiplicacao);

				divisao = (num1 / num2);
				System.out.printf(" * 4 -divisão é %d \n ", divisao);
			}

			else {
				System.out.println(" Senha Incorreta!!   ");
				cont++;
			}

		} while (senhaDigitada == senhaAtual);

	}
}

